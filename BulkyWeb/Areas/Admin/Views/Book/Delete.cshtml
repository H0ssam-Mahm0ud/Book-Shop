@model BookVM

@{
    ViewData["Title"] = "Delete";
}


<form method="post">
    <input asp-for="Book.Id" hidden />
    <div class="border p-3 my-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Book</h2>
            <hr />
        </div>
        <div class="mb-3" row>
            <label>Book Title</label>
            <input asp-for="Book.Title" disabled type="text" class="form-control" />
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>
        <div class="mb-3" row>
            <label>Description</label>
            <input asp-for="Book.Description" disabled type="text" class="form-control" />
            <span asp-validation-for="Book.Description" class="text-danger"></span>
        </div>
        <div class="mb-3" row>
            <label>Category</label>
            <Select asp-for="Book.CategoryId" disabled asp-items="Model.CategoryList" type="text" class="form-control">
                <option disabled selected>@Model.CategoryName</option>
            </Select>
            <span asp-validation-for="Book.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3" row>
            <label>ISBN</label>
            <input asp-for="Book.ISBN" disabled type="text" class="form-control" />
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3" row>
            <label>Author</label>
            <input asp-for="Book.Author" disabled type="text" class="form-control" />
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
        <div class="mb-3" row>
            <label>List Price</label>
            <input asp-for="Book.ListPrice" disabled type="text" class="form-control" />
            <span asp-validation-for="Book.ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3" row>
            <label>Price</label>
            <input asp-for="Book.Price" disabled type="text" class="form-control" />
            <span asp-validation-for="Book.Price" class="text-danger"></span>
        </div>
        <div class="mb-3" row>
            <label>Price50</label>
            <input asp-for="Book.Price50" disabled type="text" class="form-control" />
            <span asp-validation-for="Book.Price50" class="text-danger"></span>
        </div>
        <div class="mb-3" row>
            <label>Price100</label>
            <input asp-for="Book.Price100" disabled type="text" class="form-control" />
            <span asp-validation-for="Book.Price100" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-2" style="width:150px">Delete</button>
        <a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary mt-2 border-3" style="width:150px">Back</a>
    </div>
</form>

